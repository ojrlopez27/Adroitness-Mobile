<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".services.geotaggedsurvey.view.GeotaggedSurveyTakePermissionExtractDataActivity"
    tools:showIn="@layout/services_geotagged_survey_main_activity">
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/question_submit"
        android:id="@+id/q_accessMetadata"
        android:gravity="left"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin" />

    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:layout_below="@+id/q_accessMetadata">

        <Button
            android:text="YES"
            android:id="@+id/submitButton"
            android:layout_gravity="center_vertical"
            android:layout_width="0.0dip" android:layout_height="fill_parent"
            android:layout_weight="1.0"/>

        <Button
            android:text="NO"
            android:id="@+id/no"
            android:layout_alignParentBottom="true"
            android:layout_width="0.0dip" android:layout_height="fill_parent"
            android:layout_weight="1.0"
            />
    </LinearLayout>

</RelativeLayout>