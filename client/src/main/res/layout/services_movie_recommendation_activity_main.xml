<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".services.movierecommendation.view.MovieRecommendationActivity"
    android:scrollbars="vertical">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/movie_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_movie"
       android:scaleType="center"
        />
    <TextView
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:text="Query Movies"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:id="@+id/titleTxtView"
        android:layout_below="@+id/movie_icon" />
    <EditText
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_below="@+id/titleTxtView"
        android:background="@drawable/image_border"
        android:scrollbars="vertical"
        android:id="@+id/inputJson"
        />
    <TextView
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:text="Feedback"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:id="@+id/inputFeedbackTxtView"
        android:layout_below="@+id/inputJson"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_below="@+id/inputFeedbackTxtView"
        android:background="@drawable/image_border"
        android:scrollbars="vertical"
        android:id="@+id/inputFeedback"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Query"
        android:layout_below="@+id/inputFeedback"
        android:layout_marginTop="10dp"
        android:onClick="onClick"
        android:id="@+id/submitButton"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Feedback"
        android:layout_below="@+id/inputFeedback"
        android:layout_toRightOf="@+id/submitButton"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:onClick="onClick"
        android:id="@+id/submitFeedbackButton"
        />
    <TextView
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:text="Output JSON"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:id="@+id/outputTxtView"
        android:layout_below="@+id/submitButton"
        android:layout_marginTop="10dp"/>
    <TextView
    android:layout_width="400dp"
    android:layout_height="100dp"
    android:layout_below="@+id/outputTxtView"
    android:background="@drawable/image_border"
    android:scrollbars="vertical"
    android:id="@+id/outputJson"
    android:layout_marginTop="10dp"
    />


</RelativeLayout>
