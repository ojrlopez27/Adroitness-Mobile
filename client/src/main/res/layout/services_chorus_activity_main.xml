<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/services_chorus_activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".services.chorus.view.ChorusActivity">

    <Button
        android:text="End Chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chorusResponseEditview"
        android:layout_alignStart="@+id/sendUserChatButton"
        android:layout_marginTop="12dp"
        android:id="@+id/endChatButton"
        android:enabled="false"
        />

    <Button
        android:text="End and Save Chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/endChatButton"
        android:layout_toEndOf="@+id/endChatButton"
        android:layout_marginStart="44dp"
        android:id="@+id/endSaveChatButton"
        android:enabled="false"/>

    <TextView
        android:text="View Chorus Response here:"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:textSize="16dp"
        android:id="@+id/textView18"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/sendUserChatButton"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/userText"
        android:scrollbars="vertical"
        android:background="@drawable/bordertextview"
        android:layout_below="@+id/textView16"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"/>

    <Button
        android:text="Send"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:id="@+id/sendUserChatButton"
        android:layout_below="@+id/userText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"/>

    <EditText
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:id="@+id/chorusResponseEditview"
        android:inputType="none"
        android:scrollbars="vertical"
        android:background="@drawable/bordertextview"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/textView18"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:text="To begin the chat, enter your chat text here anc click send"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:id="@+id/textView16"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"/>


</RelativeLayout>