<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".services.rapport.view.RapportActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:useDefaultMargins="true"
        android:alignmentMode="alignBounds"
        android:columnOrderPreserved="false"
        android:columnCount="4"
        android:rowCount="6">


        <TextView
            android:text="Rapport Server IP:"
            android:layout_gravity="left"
            android:id="@+id/rapportIPLabel"
            />
        <EditText
            android:layout_gravity="left"
            android:id="@+id/rapportIP"
            android:text="tcp://128.237.196.42"
            android:ems="10"
            android:layout_height="41dp" />

        <TextView
            android:text="Port:"
            android:layout_column="0"
            android:layout_gravity="left"
            android:id="@+id/rapportPortLabel"
            />

        <EditText
            android:layout_gravity="left"
            android:id="@+id/rapportPort"
            android:text="5555"
            android:ems="10"
            android:layout_height="41dp" />

        <Space
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_gravity="fill"
            android:layout_height="49dp" />

        <Button
            android:text="Connect"
            android:id="@+id/connectBtn"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="connect"
            />

        <Button
            android:text="Stop"
            android:id="@+id/stopBtn"
            android:layout_row="3"
            android:layout_column="1"
            android:onClick="stop"
            />

        <TextView
            android:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="280dp"
            android:id="@+id/rapportResponse"
            android:scrollbars="vertical"
            android:scrollHorizontally="false"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_columnSpan="4" />
    </GridLayout>

</RelativeLayout>
