<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".services.email.view.EmailActivity"
    tools:showIn="@layout/services_email_main">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:useDefaultMargins="true"
        android:alignmentMode="alignBounds"
        android:columnOrderPreserved="false"
        android:columnCount="4"
        >

        <TextView
            android:layout_column="0"
            android:text="Email body:"
            android:layout_gravity="left"
            android:id="@+id/email_input_label"
            />

        <Spinner
            android:layout_gravity="left"
            android:id="@+id/email_extraction_type"
            android:spinnerMode="dropdown"
            android:layout_width="198dp"
            android:layout_height="46dp" />

        <EditText
            android:layout_column="0"
            android:layout_gravity="left"
            android:id="@+id/email_input_text"
            android:inputType="textMultiLine"
            android:lines="8"
            android:scrollbars="vertical"
            android:layout_columnSpan="2"
            />

        <TextView
            android:layout_column="0"
            android:text="Email Features:"
            android:layout_gravity="left"
            android:id="@+id/email_output_label"
            />

        <TextView
            android:layout_column="0"
            android:layout_gravity="left"
            android:id="@+id/email_output_text"
            android:scrollbars="vertical"
            android:scrollHorizontally="false"
            android:lines="8"
            android:layout_columnSpan="2"
            />

        <Button
            android:layout_column="0"
            android:text="Submit"
            android:id="@+id/sendRequest"
            android:onClick="sendRequest"/>
    </GridLayout>

</RelativeLayout>
